<!DOCTYPE html>
<html>
  <head>
    <title>FlatironBookSwap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if session[:user_id] %>
  Logged in as: <%= User.all.find(session[:user_id]).username %> <%= button_to "Profile", user_path(session[:user_id]), method: :get %> <%= button_to "Log out", logout_path %>
  <%= link_to "See all avaliable books", books_path %>
  <% else %>
  <p><%= button_to "Log in", login_path, method: :get %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
