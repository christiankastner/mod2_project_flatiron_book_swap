<% if @is_current_user %>
    <h1>My Profile!</h1>
<% else %>
    <h1><%= @user.name %></h1>
<% end %>
<p>Email: <%= @user.email %></p>
<br>
<h3>Desired Books:</h3>
<ul>
    <% @user.desired_shelf.each do |book| %>
        <li><%= link_to book.title, book %></li>
    <% end %>
</ul>

<% if @is_current_user %>
    <h3>My Private Books:</h3>
    <ul>
        <% @user.private_shelf.each do |book| %>
            <li><%= link_to book.title, book %></li>
        <% end %>
    </ul>
<% end %>

<h3>Swap Shelf:</h3>
<ul>
<% @user.public_shelf.each do |book| %>
<li><%= link_to book.title, book %> </li>
<% end %>
</ul>